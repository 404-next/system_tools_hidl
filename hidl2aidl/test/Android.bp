genrule {
    name: "hidl2aidl_test",
    tools: [
        "aidl",
        "hidl2aidl",
    ],
    cmd: "$(location hidl2aidl) -o $(genDir)/hidl2aidl/ " +
        "-rhidl2aidl:system/tools/hidl/hidl2aidl/test " +
        "hidl2aidl@1.0" + " && " +
        "$(location aidl) -o $(genDir)/aidl " +
        "$(genDir)/hidl2aidl/hidl2aidl/V1_0/IFoo.aidl",
    srcs: [
        "1.0/IFoo.hal",
    ],
    out: [
        "aidl/hidl2aidl/V1_0/IFoo.java",
    ],
}
